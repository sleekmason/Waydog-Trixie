    --field="  Extra Themes  ":FBTN "$TERMINAL_CMD -T 'Extra Themes' -e bash -c "extra-themes-installer"" \
    --field="Hblock":FBTN "$TERMINAL_CMD -T 'Hblock Installer' -e bash -c "hblock-installer"" \
    --field="Kernel Apps":FBTN "$TERMINAL_CMD -T ' Kernel Apps Installer' -e bash -c "kernel-apps-installer"" \
    --field="Kitchen Sink":FBTN "$TERMINAL_CMD -T 'Kitchen Sink Installer' -e bash -c "kitchensink-installer"" \
    --field="Liquorix Kernel":FBTN "$TERMINAL_CMD -T 'Liquorix Kernel Installer' -e bash -c "liquorix-kernel-installer"" \
    --field="Live Build Apps":FBTN "$TERMINAL_CMD -T 'Live Build Apps Installer' -e bash -c "live-build-apps-installer"" \
    --field="Ly Installer":FBTN "$TERMINAL_CMD -T 'Ly Display Manager Installer' -e bash -c "ly-installer"" \

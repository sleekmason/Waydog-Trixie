#!/bin/bash
# ly-installer for waydog.
echo
read -p "   [0;33mLy Display Manager Installer[0m

   This script will install Ly, replacing sddm on your system.
   
   [0;34mImportant![0m This script builds Ly directly on your computer.
   Total download = 85.1MB.
   
   If this script becomes unusable due to upstream changes,
   please let me know immediately and I'll adjust it. 
   
   For more information: 
   
   [0;34mhttps://codeberg.org/fairyglade/ly[0m
   
   [0;32m----------------------------------------------------
   
   Please press enter to install Ly.
   
   ----------------------------------------------------[0m
      
   Or close this terminal window to quit the install." ;
## Check for internet connection
   if : >/dev/tcp/8.8.8.8/53; then
echo ""
cd /tmp || exit &&
rm -fr "/tmp/ly.zip"
rm -fr "/tmp/ly-installer"

wget --prefer-family=IPv4 https://raw.githubusercontent.com/sleekmason/packages/master/ly.zip --show-progress -q &&
unzip -q /tmp/ly.zip &&
echo ""
"/tmp/ly-installer"
echo ""
else
echo ""
 echo "   [0;31m-------------------------------------------------------"
 echo ""
 echo "   No Internet connection. Please connect and try again."
 echo ""
 echo "   -------------------------------------------------------[0m"
echo ""
fi
echo ""


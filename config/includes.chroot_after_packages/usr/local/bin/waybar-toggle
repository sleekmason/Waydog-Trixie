#!/bin/bash
# Waybar toggle for labwc and sway.
# Made by sleekmason for waydog.
 
 if pgrep -x waybar > /dev/null; then
    pkill -x waybar
    pkill -x nm-applet
else
    if pgrep -x sway > /dev/null; then
        waybar -c "$HOME/.config/waybar/sway/config.jsonc" &
    else
        waybar &
    fi
    nm-applet &
fi

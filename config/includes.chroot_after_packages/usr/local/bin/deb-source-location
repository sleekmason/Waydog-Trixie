#!/bin/bash

read -p "    [0;33mUpdate Sources Format[0m

    Update your sources format to the new deb822 style. This format
    addresses the file-length, duplication, and machine-parsability
    issues present in the One-Line-Style Format.
    
    [0;33mhttps://repolib.readthedocs.io/en/latest/deb822-format.html[0m

    [0;32m---------------------------------------------------------------

    Press enter to change your source files to the new format.

    ---------------------------------------------------------------[0m"

sudo apt modernize-sources -y
sudo apt update
echo
read -n1 -p " Press any key to quit this dialog ... "

#### labwc autostart - Place your commands here to have programs 
### activated on login. See 'man openbox' for more information.

### Mouse Pointer Highlighter - Uncomment the line below to activate on boot.
# highlight-pointer -r 7 --show-cursor --hide-highlight --auto-hide-highlight --key-toggle-highlight 'H-space' -c violet -p green &

# Automatically lock screen after 5 minutes idle
if command -v swayidle >/dev/null 2>&1; then
    swayidle \
        timeout 300 'swaylock -f -c 282330' \       # lock after 5 min idle
        timeout 600 'systemctl suspend' \           # suspend after 10 min idle
        resume 'swaylock -f -c 000000' \            # lock on resume
        before-sleep 'swaylock -f -c 000000' &      # lock before suspend
fi
	
### Common startup programs. Comment any item no longer wanted.
swaybg -i /usr/share/backgrounds/wallpapers/Fane.jpg &
waybar >/dev/null 2>&1 &
nm-applet &
mate-power-manager >/dev/null 2>&1 &
xfsettingsd --daemon &
pnmixer &
/usr/libexec/polkit-mate-authentication-agent-1 &
swhks && swhkd -c "$HOME/.config/swhkd/swhkdrc" &
kanshi &
mako &

